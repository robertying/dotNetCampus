                    x:Name="ProgressRing"
                    Width="78.5"
                    Height="78.5"
                    IsActive="False"
                    Style="{StaticResource SmallDotProgressRing}" />
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    x:Uid="ButtonNetwork"
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="0,10,0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Style="{StaticResource CustomButtonRevealStyle}" />
                <Button
                    x:Uid="ButtonAccount"
                    Grid.Row="0"
                    Grid.Column="1"
                    Padding="0,10,0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Style="{StaticResource CustomButtonRevealStyle}" />
                <Button
                    x:Uid="ButtonBalance"
                    Grid.Row="0"
                    Grid.Column="2"
                    Padding="0,10,0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Style="{StaticResource CustomButtonRevealStyle}" />
                <Button
                    x:Uid="ButtonSession"
                    Grid.Row="0"
                    Grid.Column="3"
                    Padding="0,10,0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Style="{StaticResource CustomButtonRevealStyle}" />
                <Button
                    x:Name="NetworkButton"
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="0,10,0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="{x:Bind Path=ConnectionStatus.Network, Mode=OneWay}"
                    FontSize="12"
                    FontStyle="Italic"
                    Style="{StaticResource CustomButtonRevealStyle}" />
                <Button
                    x:Name="AccountButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Padding="0,10,0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="{x:Bind Path=ConnectionStatus.Username, Mode=OneWay}"
                    FontSize="12"
                    FontStyle="Italic"
                    Style="{StaticResource CustomButtonRevealStyle}" />
                <Button
                    x:Name="BalanceButton"
                    Grid.Row="1"
                    Grid.Column="2"
                    Padding="0,10,0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="{x:Bind Path=ConnectionStatus.Balance, Mode=OneWay}"
                    FontSize="12"
                    FontStyle="Italic"
                    Style="{StaticResource CustomButtonRevealStyle}" />
                <Button
                    x:Name="SessionButton"
                    Grid.Row="1"
                    Grid.Column="3"
                    Padding="0,10,0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="{x:Bind Path=ConnectionStatus.Session, Mode=OneWay}"
                    FontSize="12"
                    FontStyle="Italic"
                    Style="{StaticResource CustomButtonRevealStyle}" />
            </Grid>
        </StackPanel>

        <charting:Chart
            x:Name="DetailUsageChart"
            Grid.Row="1"
            Margin="0,40,0,0">
            <charting:LineSeries
                AnimationSequence="FirstToLast"
                DependentValueBinding="{Binding Usage}"
                IndependentValueBinding="{Binding Date}"
                LegendItemStyle="{StaticResource LegendItemStyle}" />
            <charting:LineSeries
                DependentValueBinding="{Binding Usage}"
                IndependentValueBinding="{Binding Date}"
                LegendItemStyle="{StaticResource LegendItemStyle}">
                <charting:LineSeries.DataPointStyle>
                    <Style TargetType="charting:LineDataPoint">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="IsTabStop" Value="False" />
                        <Setter Property="Width" Value="0" />
                        <Setter Property="Height" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="charting:LineDataPoint">
                                    <Grid x:Name="Root" Opacity="0" />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </charting:LineSeries.DataPointStyle>
            </charting:LineSeries>
        </charting:Chart>

        <controls:InAppNotification x:Name="Notification" Grid.Row="1" />
    </Grid>
</Page>
